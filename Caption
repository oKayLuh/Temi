  <script>
    // Function to change captions
    function showCaption(text) {
      document.getElementById('caption').innerText = text;
    }

    // Example demo script (timed captions)
    setTimeout(() => showCaption("This is the Okura station."), 2000);
    setTimeout(() => showCaption("Next, the Festo MPS Station."), 6000);
    setTimeout(() => showCaption("Now, meet the Dual Arm Yumi robot."), 10000);
    setTimeout(() => showCaption("Finally, the Kawada Nextage robot."), 14000);
  </script>
